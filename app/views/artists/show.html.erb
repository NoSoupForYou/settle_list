<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @artist.name %>
</p>

<% unless @artist.songs.empty? %>
  <p>
    <%= link_to "<strong>Generate a Smart Sort set list!</strong>".html_safe, generate_set_lists_path(artist_id: @artist.id, type: 'smart_sort') %>
  </p>
<% end %>

<p><strong>Set Lists:</strong></p>
<%= render(partial: 'set_lists/table',locals: { set_lists: @artist.set_lists }) || "This artist has no set lists." %>

<% unless @artist.songs.empty? -%>
  <p><strong>Song List:</strong></p>
  <ol>
    <% @artist.songs.each do |song| %>
      <li><%= song.title %></li>
    <% end %>
  </ol>
<% else %>
  <p>This artist has no songs.</p>
<% end %>

<%= link_to 'Edit', edit_artist_path(@artist) %> |
<%= link_to 'Back', artists_path %>

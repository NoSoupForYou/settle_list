<%= form_for(@song) do |f| %>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@song.errors.count, "error") %> prohibited this song from being saved:</h2>

      <ul>
      <% @song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :duration, "Duration (in seconds)" %><br />
    <%= f.text_field :duration %>
  </div>

  <h3>Tagging</h3>
  <p>
    Tags are the details needed for "intelligent" set list creation. A tag can be the songs tuning (E, A, Bb); a declarative adjective (opener, ender, break, !opener); or whatever you want!
  </p>
  
  <div class="field">
    <%= f.label :tag_list, "Tags (separated by commas)" %><br />
    <%= f.text_field :tag_list %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
